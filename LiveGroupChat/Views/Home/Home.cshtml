@model List<LiveGroupChat.Models.ViewModels.MessageViewModel>

@{
    ViewData["Title"] = "Home - Chat";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home.css">
    <script src="/js/signalr.min.js"></script>
    <script src="/js/chat.js" defer></script>
    <style>
        .message-content {
            position: relative;
            padding-right: 25px;
        }
        .reaction-button-wrapper {
            position: absolute;
            bottom: 2px;
            right: 2px;
        }
        .reaction-button {
            font-size: 1.1em;
            cursor: pointer;
            background: none;
            border: none;
            color: #ccc;
        }
        .reaction-popup {
            display: none;
            position: absolute;
            bottom: 120%;
            right: 0;
            background-color: #222;
            border: 1px solid #555;
            border-radius: 10px;
            padding: 5px 10px;
            white-space: nowrap;
            z-index: 100;
        }
        .reaction-popup button {
            cursor: pointer;
            font-size: 1.3em;
            margin: 0 4px;
            background: none;
            border: none;
        }
        .reactions {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
<div class="chat-container">
    <div class="chat-box">
        <div class="chat-header">
            <h2>Welcome to the chat!</h2>
        </div>
        <div class="chat-window">
            <div class="message-container">
                @foreach (var message in Model)
                {
                    <div class="message left" data-message-id="@message.Id">
                        <div style="font-size: 0.9em; color: #ccc;">
                            @if (message.User != null)
                            {
                                <strong>@message.User.Nickname</strong>
                            }
                            else
                            {
                                <strong>Unknown user</strong>
                            }
                        </div>

                        <div class="message-content">
                            @message.Text

                            <div class="reaction-button-wrapper">
                                <span class="reaction-button" onclick="toggleReactions(this)">➕</span>
                                <div class="reaction-popup">
                                    <button type="button" class="emoji-button" data-message-id="@message.Id" data-emoji="❤️">❤️</button>
                                    <button type="button" class="emoji-button" data-message-id="@message.Id" data-emoji="😂">😂</button>
                                    <button type="button" class="emoji-button" data-message-id="@message.Id" data-emoji="👍">👍</button>
                                    <button type="button" class="emoji-button" data-message-id="@message.Id" data-emoji="😮">😮</button>
                                    <button type="button" class="emoji-button" data-message-id="@message.Id" data-emoji="👎">👎</button>
                                </div>
                            </div>

                            <div class="reactions">
                                @foreach (var reaction in message.Reactions)
                                {
                                    <span style="font-size: 1.3em;">@reaction.Emoji</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="chat-footer">
            <form asp-action="WriteMessage" method="post" style="display:flex; width: 100%;">
                <input type="text" name="Text" placeholder="Write a message..." class="chat-input" />
                <button type="submit" class="send-btn">Send</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>
