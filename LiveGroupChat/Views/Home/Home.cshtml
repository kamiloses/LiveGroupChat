@model List<LiveGroupChat.ViewModels.MessageViewModel>

@{
    ViewData["Title"] = "Home - Czat";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home.css">
</head>
<body>
<div class="chat-container">
    <div class="chat-box">
        <div class="chat-header">
            <h2>Witaj w czacie!</h2>
        </div>
        <div class="chat-window">
            <div class="message-container">
                @foreach (var message in Model)
                {
                    <div class="message @(message.User.LastName == "Nowak" ? "left" : "right")">

                        <div style="font-size: 0.9em; color: #ccc;">
                            <strong>@message.User.FirstName @message.User.LastName</strong>&nbsp;&nbsp;
                            @if (message.Created < DateTime.Now.AddDays(-1))
                            {
                                <span>@message.Created.ToString("dd.MM.yyyy")</span>
                            }
                            else
                            {
                                <span style="float: right;">@message.Created.ToString("dd.MM.yyyy, HH:mm")</span>
                            }
                        </div>
                        <div>@message.Text</div>
                    </div>
                }
            </div>
        </div>
        <div class="chat-footer">
            <form asp-action="WriteMessage" method="post" style="display:flex; width: 100%;">
                <input type="text" name="Text" placeholder="Napisz wiadomość..." class="chat-input" />
                <button type="submit" class="send-btn">Wyślij</button>
            </form>
        </div>
    </div>
</div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.1.4/sockjs.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
<script src="/js/websocket.js"></script>

<script>
    window.onload = function () {
       connectToWebSocket();
    };
</script>

</html>