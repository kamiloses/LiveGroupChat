@model List<LiveGroupChat.ViewModels.MessageViewModel>

@{
    ViewData["Title"] = "Home - Czat";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/home.css">
    <style>
        .message-content {
            position: relative;
            padding-right: 25px;
        }
        .reaction-button-wrapper {
            position: absolute;
            bottom: 2px;
            right: 2px;
        }
        .reaction-button {
            font-size: 1.1em;
            cursor: pointer;
            background: none;
            border: none;
            color: #ccc;
        }
        .reaction-popup {
            display: none;
            position: absolute;
            bottom: 120%;
            right: 0;
            background-color: #222;
            border: 1px solid #555;
            border-radius: 10px;
            padding: 5px 10px;
            white-space: nowrap;
            z-index: 100;
        }
        .reaction-popup span {
            cursor: pointer;
            font-size: 1.3em;
            margin: 0 4px;
        }
    </style>
</head>
<body>
<div class="chat-container">
    <div class="chat-box">
        <div class="chat-header">
            <h2>Witaj w czacie!</h2>
        </div>
        <div class="chat-window">
            <div class="message-container">
                @foreach (var message in Model)
                {
                    <div class="message @(message.User.LastName == "Nowak" ? "left" : "right")">
                        <div style="font-size: 0.9em; color: #ccc;">
                            <strong>@message.User.FirstName @message.User.LastName</strong>
                            @if (message.Created < DateTime.Now.AddDays(-1))
                            {
                                <span>@message.Created.ToString("dd.MM.yyyy")</span>
                            }
                            else
                            {
                                <span style="float: right;">@message.Created.ToString("dd.MM.yyyy, HH:mm")</span>
                            }
                        </div>

                        <div class="message-content">
                            @message.Text

                            <div class="reaction-button-wrapper">
                                <span class="reaction-button" onclick="toggleReactions(this)">➕</span>
                                <div class="reaction-popup">
                                    @foreach (var emoji in new[] { "❤️", "😂", "👍", "😮", "👎" })
                                    {
                                        <form method="post" action="/home/emoji" style="display:inline;">
                                            <input type="hidden" name="Id" value="@message.Id" />
                                            <input type="hidden" name="reaction" value="@emoji" /> 
                                            <button type="submit" style="background:none; border:none; font-size:1.3em; cursor:pointer;">@emoji</button>
                                        </form>
                                    }

                                </div>
                            </div>
                            <div class="reactions">
                                    
                                    
                                @foreach (var reaction in message.Reactions)
                                {

                                    <span style="font-size: 1.3em;">@reaction.Emoji</span>
                                }
                            </div>
                            
                            
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="chat-footer">
            <form asp-action="WriteMessage" method="post" style="display:flex; width: 100%;">
                <input type="text" name="Text" placeholder="Napisz wiadomość..." class="chat-input" />
                <button type="submit" class="send-btn">Wyślij</button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/microsoft.signalr@7.0.5/dist/browser/signalr.min.js"></script>

<script src="/js/websocket.js"></script>


<script>
    window.onload = function () {
        connectToWebSocket();
    };

    function toggleReactions(el) {
        const popup = el.nextElementSibling;
        document.querySelectorAll('.reaction-popup').forEach(p => {
            if (p !== popup) p.style.display = 'none';
        });
        popup.style.display = popup.style.display === "block" ? "none" : "block";
    }

  
    document.addEventListener('click', function (e) {
        if (!e.target.closest('.reaction-button-wrapper')) {
            document.querySelectorAll('.reaction-popup').forEach(p => p.style.display = 'none');
        }
    });
</script>

</body>
</html>
