@model LiveGroupChat.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/register.css">
</head>
<body>
<div class="register-container">
    <div class="register-box">
        <div class="register-header">
            <h2>Rejestracja</h2>
        </div>
        <form method="post">
            <div>
                <label for="FirstName">First Name</label>
                <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" />
                @if (ViewData.ModelState["FirstName"]?.Errors.Count > 0)
                {
                    <div class="error">@ViewData.ModelState["FirstName"]?.Errors[0]?.ErrorMessage</div>
                }
            </div>

            <div>
                <label for="LastName">Last Name</label>
                <input type="text" id="LastName" name="LastName" value="@Model.LastName" />
                @if (ViewData.ModelState["LastName"]?.Errors.Count > 0)
                {
                    <div class="error">@ViewData.ModelState["LastName"]?.Errors[0]?.ErrorMessage</div>
                }
            </div>

            <div>
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" value="@Model.Email" />
                @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
                {
                    <div class="error">@ViewData.ModelState["Email"]?.Errors[0]?.ErrorMessage</div>
                }
            </div>

            <div>
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" value="@Model.Password" />
                @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
                {
                    <div class="error">@ViewData.ModelState["Password"]?.Errors[0]?.ErrorMessage</div>
                }
            </div>

            <button type="submit">Register</button>
        </form>
    </div>
</div>
</body>
</html>



